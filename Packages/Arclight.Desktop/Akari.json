{

    "Name": "Arclight.Desktop",
    "Version": "0.1",
    "Author": "Arclight-Team",
    "Description": "Window and input support for Arclight desktop applications",

    "Resources": [
        "Bin", "Include"
    ],

    "Artifacts": {

        "Shared": {
            "Includes": "Include",
            "Dependencies": ["Arclight.Core", "GLEW"]
        },

        "x64-Windows-Debug" : {

            "Platform": "x64-Windows",
            "Linkage": "Static",
            "Config": "Debug",
            "Libraries": "Bin/Debug/Arclight.Desktop.lib"

        },

        "x64-Windows-Release" : {

            "Platform": "x64-Windows",
            "Linkage": "Static",
            "Config": "Release",
            "Libraries": "Bin/Release/Arclight.Desktop.lib"

        }

    }

}