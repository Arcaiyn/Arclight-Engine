{

    "Name": "Arclight.Spring",
    "Version": "0.1",
    "Author": "Arcayn",
    "Description": "Accelerated 2D sprite engine for Arclight",

    "Resources": [
        "Bin", "Include"
    ],

    "Artifacts": {

        "Shared": {
            "Includes": "Include",
            "Dependencies": ["Arclight.Core", "Arclight.GLE"]
        },

        "x64-Windows-Debug" : {

            "Platform": "x64-Windows",
            "Linkage": "Static",
            "Config": "Debug",
            "Libraries": "Bin/Debug/Arclight.Spring.lib"

        },

        "x64-Windows-Release" : {

            "Platform": "x64-Windows",
            "Linkage": "Static",
            "Config": "Release",
            "Libraries": "Bin/Release/Arclight.Spring.lib"

        }

    }

}