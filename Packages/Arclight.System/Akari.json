{

    "Name": "Arclight.System",
    "Version": "0.1",
    "Author": "Arclight-Team",
    "Description": "Operating system extensions for Arclight",

    "Resources": [
        "Bin", "Include"
    ],

    "Artifacts": {

        "Windows": {
            "Platform": "x64-Windows",
            "Includes": "Include/Platform/Windows"
        },

        "x64-Windows-Debug" : {

            "Platform": "x64-Windows",
            "Linkage": "Static",
            "Config": "Debug",
            "Libraries": "Bin/Debug/Arclight.System.lib"

        },

        "x64-Windows-Release" : {

            "Platform": "x64-Windows",
            "Linkage": "Static",
            "Config": "Release",
            "Libraries": "Bin/Release/Arclight.System.lib"

        }

    }

}